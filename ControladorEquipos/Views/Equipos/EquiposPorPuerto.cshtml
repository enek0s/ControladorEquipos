@model IEnumerable<ControladorEquipos.Models.Equipos>

@{
    ViewData["Title"] = "Equipos con Puerto";
}

<h2>Equipos con Puerto</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Hostname</th>
            <th>IP</th>
            <th>MAC</th>
            <th>OS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model)
        {
            <tr>
                <td>@equipo.Hostname</td>
                <td>@equipo.IP</td>
                <td>@equipo.MAC</td>
                <td>@equipo.OS</td>
                <td>
                    <a asp-action="Details" asp-route-id="@equipo.Id" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado de Equipos</a>
</p>
