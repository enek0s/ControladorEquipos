<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControladorEquipos</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControladorEquipos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        :root {
            --primary-color: #d40000;
            --light-gray: #f5f5f5;
            --border-color: #e0e0e0;
            --text-color: #212529;
        }

        body {
            background-color: var(--light-gray);
            color: var(--text-color);
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: #fff;
            border-bottom: 1px solid var(--border-color);
        }

        .navbar-brand {
            color: var(--text-color) !important;
            font-weight: bold;
        }

           

        .nav-link {
            color: var(--text-color) !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: var(--primary-color) !important;
            }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: #a80000;
                border-color: #a80000;
            }

        .btn-outline-light {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

            .btn-outline-light:hover {
                background-color: var(--primary-color);
                color: #fff;
            }

        .card {
            background-color: #fff;
            border: 1px solid var(--border-color);
            border-radius: 12px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
        }

        .card-title {
            font-weight: 600;
            border-left: 4px solid var(--primary-color);
            padding-left: 10px;
        }

        .table {
            background-color: #fff;
            border: 1px solid var(--border-color);
        }

            .table th {
                font-weight: 600;
                color: var(--text-color);
            }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.1rem rgba(212, 0, 0, 0.2);
        }

        .alert-success,
        .alert-danger {
            border-left: 4px solid var(--primary-color);
        }

        footer {
            margin-top: 50px;
            padding: 20px 0;
            background-color: #fff;
            border-top: 1px solid var(--border-color);
            text-align: center;
            font-size: 0.9rem;
            color: #6c757d;
        }

        .spacer-navbar {
            height: 70px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imagenes/Geka-logo.png" alt="GEKA" style="height: 36px;" />
                    
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Equipos" asp-action="Index">
                                <i class="bi bi-pc-display-horizontal"></i> Equipos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Puertos" asp-action="Index">
                                <i class="bi bi-usb-plug-fill"></i> Puertos
                            </a>
                        </li>
                    </ul>
                    <form class="d-flex" method="get" asp-controller="Equipos" asp-action="Search">
                        <input class="form-control me-2" type="search" name="query" placeholder="Buscar..." />
                        <button class="btn btn-outline-light" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </nav>
        <div class="spacer-navbar"></div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        © @DateTime.Now.Year GEKA - Controlador de Equipos
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
